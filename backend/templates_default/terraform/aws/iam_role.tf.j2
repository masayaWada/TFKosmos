resource "aws_iam_role" "{{ resource_name }}" {
  name = "{{ role.role_name }}"
  path = "{{ role.path }}"

  assume_role_policy = jsonencode({{ role.assume_role_policy_document }})
{% if role.tags %}
  tags = {
{% for key, value in role.tags.items() %}
    "{{ key }}" = "{{ value }}"
{% endfor %}
  }
{% endif %}
}

