{
  "description": "git-smart-commit エージェントのツール権限設定",
  "version": "1.0.0",
  "permissions": {
    "Bash": {
      "description": "Gitコマンド専用（読み取りと書き込み）",
      "allowed": [
        {
          "pattern": "git status*",
          "level": "read-only",
          "description": "ステージング済みファイルの確認"
        },
        {
          "pattern": "git diff --cached*",
          "level": "read-only",
          "description": "変更差分の確認"
        },
        {
          "pattern": "git diff --staged*",
          "level": "read-only",
          "description": "ステージング済み変更の確認"
        },
        {
          "pattern": "git log --oneline*",
          "level": "read-only",
          "description": "コミット履歴の参照"
        },
        {
          "pattern": "git branch --show-current",
          "level": "read-only",
          "description": "現在のブランチ名取得"
        },
        {
          "pattern": "git commit -m*",
          "level": "write",
          "description": "コミットの実行"
        },
        {
          "pattern": "git push origin*",
          "level": "write",
          "description": "リモートへのプッシュ"
        }
      ],
      "denied": [
        {
          "pattern": "git push --force*",
          "reason": "強制プッシュは禁止（データ損失のリスク）"
        },
        {
          "pattern": "git push -f*",
          "reason": "強制プッシュは禁止（データ損失のリスク）"
        },
        {
          "pattern": "git push --force-with-lease*",
          "reason": "強制プッシュは禁止"
        },
        {
          "pattern": "git commit --amend*",
          "reason": "コミットの修正は禁止（履歴改変のリスク）"
        },
        {
          "pattern": "git reset --hard*",
          "reason": "ハードリセットは禁止（データ損失のリスク）"
        },
        {
          "pattern": "git rebase -i*",
          "reason": "インタラクティブリベースは禁止"
        },
        {
          "pattern": "git commit --no-verify*",
          "reason": "フックのスキップは禁止"
        },
        {
          "pattern": "git config*",
          "reason": "Git設定の変更は禁止"
        },
        {
          "pattern": "rm -rf*",
          "reason": "削除コマンドは禁止"
        },
        {
          "pattern": "sudo*",
          "reason": "管理者権限コマンドは禁止"
        }
      ]
    }
  },
  "toolsBlacklist": [
    "Read",
    "Write",
    "Edit",
    "Grep",
    "Glob",
    "Task",
    "WebFetch",
    "WebSearch"
  ],
  "toolsBlacklistReason": "このエージェントはGitコマンド専用のため、ファイル操作・検索・Web操作は不要"
}
