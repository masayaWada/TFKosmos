{
  "permissions": {
    "allow": [
      "Bash(cargo:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(git:*)",
      "Bash(make:*)",
      "Bash(terraform:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(wc:*)",
      "Bash(echo:*)",
      "Bash(mkdir:*)",
      "Bash(node:*)",
      "Bash(python3:*)",
      "Bash(curl:*)",
      "Bash(brew:*)",
      "Bash(gh:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git branch:*)",
      "Read(./.claude/rules)",
      "Read(./.claude/agents/**)",
      "Bash(pkill:*)",
      "Bash(lsof:*)",
      "Bash(xargs:*)",
      "Bash(uvx:*)",
      "Bash(timeout:*)"
    ],
    "deny": [
      "Bash(rm -rf /:*)",
      "Bash(rm -rf ~:*)",
      "Bash(rm -rf .:*)",
      "Bash(rm -rf ..:*)",
      "Bash(sudo rm:*)",
      "Bash(sudo:*)",
      "Bash(chmod 777:*)",
      "Bash(chmod -R 777:*)",
      "Bash(dd:*)",
      "Bash(mkfs:*)",
      "Bash(fdisk:*)",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./backend/.env)",
      "Read(./backend/.env.*)",
      "Read(./frontend/.env)",
      "Read(./frontend/.env.*)",
      "Read(./secrets/**)",
      "Read(~/.aws/credentials)",
      "Read(~/.aws/config)",
      "Read(~/.ssh/id_rsa)",
      "Read(~/.ssh/id_ed25519)",
      "Write(./.env)",
      "Write(./backend/.env)",
      "Write(./frontend/.env)",
      "Write(~/.aws/*)",
      "Write(~/.ssh/*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/format-hook.sh {{file_path}}",
            "statusMessage": "Formatting code..."
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/format-hook.sh {{file_path}}",
            "statusMessage": "Formatting code..."
          }
        ]
      }
    ]
  }
}
